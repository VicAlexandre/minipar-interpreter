pi: number = 0

func swap(arr: array, idx1: number, idx2: number) -> array {
  temp: number = arr[idx1]
  arr[idx1] = arr[idx2]
  arr[idx2] = temp
  return arr
}

func partition(arr: array, low: number, high: number) -> array {
  pivot: number = arr[high]
  i: number = low - 1

  j: number = low
  while (j < high) {
    if (arr[j] <= pivot) {
      i = i + 1
      arr = swap(arr, i, j)
    }
    j = j + 1
  }
  arr = swap(arr, i + 1, high)
  pi = i + 1
  return arr
}

func quicksort_inplace(arr: array, low: number, high: number) -> array {
  if (low < high) {
    arr = partition(arr, low, high)
    arr = quicksort_inplace(arr, low, pi - 1)
    arr = quicksort_inplace(arr, pi + 1, high)
  }
  return arr
}

print("==== Ordenacao com Quicksort (In-Place) ====")

my_array: array = [5.0, 1.0, 9.0, 3.0, 7.0, 4.0, 8.0, 6.0, 2.0]

print("Vetor original: ", my_array)

array_len: number = len(my_array)
high_index: number = array_len - 1

sorted :array = quicksort_inplace(my_array, 0, high_index)

print("Vetor ordenado: ", sorted)

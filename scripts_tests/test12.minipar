# Script de Exemplo Minipar

# Função para calcular a soma dos primeiros n números
func soma_ate(n: number) -> number {
  soma_local: number = 0
  i: number = 0 # Variável de controle do loop

  # Loop for para somar de 0 até n-1
  for (i = 0; i < n; i = i + 1) {
    soma_local = soma_local + i
  }

  return soma_local
}

# Função principal
func main() -> void {
  limite: number = 10
  resultado_soma: number = 0

  # Chama a função de soma
  resultado_soma = soma_ate(limite)

  # Usa a função built-in print
  print("Calculando a soma dos números até:")
  print(limite) # Imprime o limite
  print("Resultado da soma:")
  print(resultado_soma) # Imprime o resultado

  # Exemplo de if/else
  check: bool = resultado_soma > 40
  if (check) {
      print("A soma é maior que 40.")
  } else {
      print("A soma não é maior que 40.")
  }

  # Exemplo de while (apenas para demonstração)
  contador: number = 0
  while (contador < 3) {
      print("Contador while:")
      print(contador)
      contador = contador + 1
  }
}

main()